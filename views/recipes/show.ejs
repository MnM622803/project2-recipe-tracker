<%- include('../partials/head') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Recipes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

  <div class="container mt-5">
    <h1 class="text-center mb-4">My Recipes</h1>

    <% if (userRecipes.length === 0) { %>
      <p class="text-center">You have no recipes yet.</p>
      <div class="text-center">
        <a href="/recipes/new" class="btn btn-success">Add Your First Recipe</a>
      </div>
    <% } else { %>
      <div class="row">
        <% userRecipes.forEach(recipe => { %>
          <div class="col-md-6 mb-4">
            <div class="card h-100">
              <% if (recipe.image && recipe.image.url) { %>
                <img src="<%= recipe.image.url %>" class="card-img-top" alt="Recipe Image" style="height: 200px; object-fit: cover;">
              <% } else { %>
                <img src="/placeholder.jpg" class="card-img-top" alt="No image available" style="height: 200px; object-fit: cover;">
              <% } %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= recipe.title %></h5>
                <p class="card-text flex-grow-1"><%= recipe.description.substring(0, 100) %>...</p>
                <a href="/recipes/<%= recipe._id %>" class="btn btn-primary mt-auto">View Recipe</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

</body>
</html>
